- @posts.each do |pst|
  .div_posts
    %br
    -if pst.user.image_url(:thumb).to_s == ""
      = image_tag("avatar.png", size: "50x50", alt: "Avatar")
    -else
      = image_tag("#{pst.user.image_url(:thumb)}")
    .name
      = pst.user.username
    .time_ago
      = "Posted #{time_ago_in_words(pst.created_at)} ago."
    %br
    %b
      = link_to pst.topik, post_path(pst.id)
    %br
      .clip
        = show_content(pst).html_safe
    %br