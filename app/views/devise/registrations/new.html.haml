.row
  .col-md-4
  .col-md-4
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render 'shared/error_messages', object: f.object
      = #devise_error_messages!
      .form-group
        = f.label :username,  value: "login"
        %em (20 characters maximum)
        %br/
        = f.text_field :username, class: "form-control", autofocus: true
      .form-group
        =f.label :name
        %em (40 characters maximum)
        %br/
        = f.text_field :name, class: "form-control", value:  params[:name] ||= ""
      .form-group
        = f.label :email
        %br/
        = f.email_field :email, class: "form-control",
        value: !params[:provider].nil? ? "#{params[:provider]}@#{params[:name].delete(' ')}.com"  : ""
      .form-group
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", class: "form-control"
      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
      .form-group
        = f.file_field :image
        %br/
        = f.submit "Sign up", class: "btn btn-default"
    = render "devise/shared/links"
