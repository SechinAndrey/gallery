%h2 #{t 'devise.passwords.lb_change_your_password'}
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .field
    = f.label :password, "#{t 'devise.passwords.lb_new_password'}"
    %br/
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} #{t 'all.i_max_char'})
      %br/
    = f.password_field :password, autofocus: true, autocomplete: "off"
  .field
    = f.label :password_confirmation, "#{t 'devise.passwords.lb_confirm_new_password'}"
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "#{t 'devise.passwords.b_change_my_password'}"
= render "devise/shared/links"
