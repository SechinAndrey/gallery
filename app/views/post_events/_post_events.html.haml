.div_posts.clip
  %table.table
    %tr
      %th
        #{t 'post_events.lb_user'}
      %th
        #{t 'post_events.lb_action'}
      %th
        #{t 'post_events.lb_post_topic'}
      %th
        #{t 'post_events.lb_date'}
    - @post_events.each do |pst_ev|
      %tr
        %td
          = pst_ev.username
        %td.min_column_width
          = pst_ev.action
        %td.column_width
          -if post_exist?(pst_ev.post_id)
            = link_to pst_ev.post_name, post_path(pst_ev.post_id)
          -else
            = pst_ev.post_name
        %td
          = pst_ev.created_at

